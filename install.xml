<?xml version="1.0" encoding="utf-8" ?>
<module type="plugin" name="youtube">
	<title>Youtube Video</title>
	<summary>Makes possible to assign a video from Youtube</summary>
	<author>Intelliants LLC</author>
	<contributor>Intelliants LLC</contributor>
	<version>4.1.0</version>
	<date>2017-03-02</date>
	<compatibility>4.1</compatibility>

	<phrases>
		<phrase category="common" key="youtube_video">Youtube video</phrase>
		<phrase category="common" key="field_autos_youtube_video">Youtube video</phrase>
		<phrase category="common" key="field_articles_youtube_video">Youtube video</phrase>
		<phrase category="common" key="field_estates_youtube_video">Youtube video</phrase>
		<phrase category="common" key="field_listings_youtube_video">Youtube video</phrase>
	</phrases>

	<config group="miscellaneous" name="youtube" type="divider" description="Youtube">Youtube</config>
	<config group="miscellaneous" name="youtube_items_enabled" type="itemscheckbox" description="List of items Youtube is enabled for"><![CDATA[members]]></config>
	<config group="miscellaneous" name="youtube_items_implemented" type="hidden" description="">members,articles,listings,estates,autos,coupons,shops,ypages</config>

	<fields>
		<field name="youtube_video" item="members" type="text" group="general" page="profile" length="128">Youtube Video</field>
	</fields>

	<hooks>
		<hook name="phpViewListingBeforeStart" type="php" filename="hook.phpViewListingBeforeStart" page_type="front"><![CDATA[]]></hook>
		<hook name="smartyItemViewBeforeTabs" type="smarty" filename="tab" page_type="front"><![CDATA[]]></hook>
		<hook name="phpPackageItemChangedForPlugin" type="php" filename="hook.phpPackageItemChangedForPlugin" page_type="admin"><![CDATA[]]></hook>
	</hooks>
</module>